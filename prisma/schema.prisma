// Prisma schema for MySQL/MariaDB
// Run `npx prisma migrate dev --name init` after editing

datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model jr_projects {
  id         Int                  @id @default(autoincrement())
  name       String
  short      String
  role       String?
  position   String?
  extended   String?              @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  links      jr_projects_links[]
  gallery    jr_projects_gallery[]
}

model jr_projects_links {
  id         Int         @id @default(autoincrement())
  project_id Int
  project    jr_projects @relation(fields: [project_id], references: [id])
  website    String
  url        String
  priority   Int         @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  gallery    jr_projects_gallery[]
}

model jr_projects_gallery {
  id         Int         @id @default(autoincrement())
  project_id Int
  project    jr_projects @relation(fields: [project_id], references: [id])
  link_id    Int?
  link       jr_projects_links? @relation(fields: [link_id], references: [id])
  title      String
  image      String
  priority   Int         @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}